{
  "name": "@alma/design-system",
  "version": "0.4.0",
  "description": "Alma design system (Vue 3, Vite library build)",
  "license": "MIT",
  "type": "module",
  "private": false,
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./*": {
      "import": "./dist/*.js",
      "types": "./dist/*.d.ts"
    },
    "./assets/*": {
      "import": "./dist/assets/*.js",
      "types": "./dist/assets/*.d.ts"
    },
    "./atoms/*": {
      "import": "./dist/atoms/*.js",
      "types": "./dist/atoms/*.d.ts"
    },
    "./molecules/*": {
      "import": "./dist/molecules/*.js",
      "types": "./dist/molecules/*.d.ts"
    },
    "./organisms/*": {
      "import": "./dist/organisms/*.js",
      "types": "./dist/organisms/*.d.ts"
    },
    "./templates/*": {
      "import": "./dist/templates/*.js",
      "types": "./dist/templates/*.d.ts"
    },
    "./composables/*": {
      "import": "./dist/composables/*.js",
      "types": "./dist/composables/*.d.ts"
    },
    "./styles.runtime.css": "./src/app.runtime.css",
    "./styles.runtime.scss": "./src/app.runtime.scss",
    "./style.css": "./dist/style.css",
    "./core.scss": "./src/_index.scss",
    "./global.styles.scss": "./src/assets/scss/app.global.styles.scss"
  },
  "scripts": {
    "lint": "eslint 'src/**/*.{ts,tsx,vue}'",
    "build": "vite build",
    "build:analyze": "ANALYZE=1 vite build",
    "typecheck": "vue-tsc -p tsconfig.types.json --noEmit",
    "dev": "pnpm lint && vite",
    "dts:verify": "tsc --noEmit",
    "test:unit": "vitest",
    "test:ui": "vitest --ui",
    "docs:dev": "storybook dev -p 6006",
    "docs:build": "storybook build",
    "docs:preview": "serve storybook-static",
    "tokens:cache": "node ./scripts/build-cache.mjs",
    "tokens:cache:clean": "node ./scripts/clean-cache.mjs",
    "tokens:cache:verify": "node ./scripts/verify-cache.mjs"
  },
  "packageManager": "pnpm@9.12.3",
  "peerDependencies": {
    "pinia": "^3.0.0",
    "vue": "^3.5.0",
    "vue-router": "^4.0.0"
  },
  "dependencies": {
    "@vueuse/core": "^13.9.0",
    "alma-icons": "^1.4.0",
    "dompurify": "^3.3.0",
    "gsap": "^3.13.0",
    "vue3-lottie": "^3.3.1",
    "vue3-resize-bounding": "^2.1.2"
  },
  "devDependencies": {
    "@alma/tokens-worker": "workspace:*",
    "@eslint/js": "^9.39.1",
    "@mdx-js/react": "^3.1.1",
    "@pinia/testing": "^1.0.3",
    "@storybook/addon-a11y": "^9.1.16",
    "@storybook/addon-docs": "^9.1.16",
    "@storybook/mdx2-csf": "^1.1.0",
    "@storybook/vue3": "^9.1.16",
    "@storybook/vue3-vite": "^9.1.16",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.10.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitejs/plugin-vue-jsx": "^5.1.1",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "chokidar": "^4.0.3",
    "color": "^5.0.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-storybook": "^9.1.16",
    "eslint-plugin-vue": "^10.5.1",
    "globals": "^16.5.0",
    "js-yaml": "^4.1.0",
    "jsdom": "^26.1.0",
    "lightningcss": "^1.30.2",
    "lodash-es": "^4.17.21",
    "msw": "^2.12.1",
    "msw-storybook-addon": "^2.0.6",
    "prettier": "^3.6.2",
    "rollup-plugin-dts": "^6.2.3",
    "rollup-plugin-visualizer": "^6.0.5",
    "sass": "^1.94.0",
    "serve": "^14.2.5",
    "storybook": "^9.1.16",
    "terser": "^5.44.1",
    "typed-css-modules": "^0.9.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^6.4.1",
    "vite-plugin-babel": "^1.3.2",
    "vite-plugin-css-modules": "^0.0.1",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-lightningcss": "^0.0.5",
    "vite-svg-loader": "^5.1.0",
    "vitest": "^3.2.4",
    "vitest-canvas-mock": "^0.3.3",
    "vue-i18n": "^11.1.12",
    "vue-router": "^4.6.3",
    "vue-tsc": "^2.2.12"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
