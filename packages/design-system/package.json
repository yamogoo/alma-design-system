{
  "name": "@alma/design-system",
  "version": "0.1.0",
  "description": "Alma design system (Vue 3, Vite library build)",
  "license": "MIT",
  "type": "module",
  "private": false,
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./assets/*": {
      "import": "./dist/assets/*.js",
      "types": "./dist/assets/*.d.ts"
    },
    "./atoms/*": {
      "import": "./dist/atoms/*.js",
      "types": "./dist/atoms/*.d.ts"
    },
    "./molecules/*": {
      "import": "./dist/molecules/*.js",
      "types": "./dist/molecules/*.d.ts"
    },
    "./organisms/*": {
      "import": "./dist/organisms/*.js",
      "types": "./dist/organisms/*.d.ts"
    },
    "./templates/*": {
      "import": "./dist/templates/*.js",
      "types": "./dist/templates/*.d.ts"
    },
    "./composables/*": {
      "import": "./dist/composables/*.js",
      "types": "./dist/composables/*.d.ts"
    },
    "./style.css": "./dist/style.css",
    "./core.scss": "./src/_index.scss",
    "./global.styles.scss": "./src/assets/scss/app.global.styles.scss"
  },
  "scripts": {
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "build": "vite build",
    "typecheck": "vue-tsc -p tsconfig.types.json --noEmit",
    "dev": "pnpm lint && vite",
    "dts:verify": "tsc --noEmit",
    "test:unit": "vitest",
    "test:ui": "vitest --ui",
    "docs:dev": "storybook dev -p 6006",
    "docs:build": "storybook build",
    "docs:preview": "serve storybook-static"
  },
  "packageManager": "pnpm@9.12.3",
  "peerDependencies": {
    "pinia": "^3.0.0",
    "vue": "^3.5.0",
    "vue-router": "^4.0.0"
  },
  "dependencies": {
    "@alma/tokens-worker": "workspace:*",
    "@vueuse/core": "^13.9.0",
    "alma-icons": "^1.3.0",
    "dompurify": "^3.2.7",
    "gsap": "^3.13.0",
    "vue3-lottie": "^3.3.1",
    "vue3-resize-bounding": "^2.1.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@mdx-js/react": "^3.1.1",
    "@pinia/testing": "^1.0.2",
    "@storybook/addon-a11y": "^9.1.8",
    "@storybook/addon-docs": "^9.1.8",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/client-api": "^7.6.17",
    "@storybook/manager-api": "^8.6.14",
    "@storybook/mdx2-csf": "^1.1.0",
    "@storybook/theming": "^8.6.14",
    "@storybook/vue3": "^9.1.8",
    "@storybook/vue3-vite": "^9.1.8",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.5.2",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitejs/plugin-vue-jsx": "^5.1.1",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "chokidar": "^4.0.3",
    "color": "^5.0.2",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-storybook": "^9.1.8",
    "eslint-plugin-vue": "^10.5.0",
    "globals": "^16.4.0",
    "js-yaml": "^4.1.0",
    "jsdom": "^26.1.0",
    "lightningcss": "^1.30.1",
    "lodash-es": "^4.17.21",
    "msw": "^2.11.3",
    "msw-storybook-addon": "^2.0.5",
    "prettier": "^3.6.2",
    "rollup-plugin-dts": "^6.2.3",
    "sass": "^1.93.2",
    "serve": "^14.2.5",
    "storybook": "^9.1.8",
    "terser": "^5.44.0",
    "typed-css-modules": "^0.9.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.1",
    "vite": "^6.3.6",
    "vite-plugin-babel": "^1.3.2",
    "vite-plugin-css-modules": "^0.0.1",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-lightningcss": "^0.0.5",
    "vite-svg-loader": "^5.1.0",
    "vitest": "^3.2.4",
    "vitest-canvas-mock": "^0.3.3",
    "vue-router": "^4.5.1",
    "vue-tsc": "^2.2.12"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
