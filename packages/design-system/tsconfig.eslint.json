{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "noEmit": true,
    "lib": ["ES2022", "DOM"],
    "types": ["vite/client", "vitest/globals", "vue/jsx"],
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "jsxImportSource": "vue"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.json",
    "types/**/*.d.ts",
    "env.d.ts",
    "**/*.stories.*",
    "**/*.spec.*",
    "**/*.test.*",
    "vite.config.ts",
    "vitest.config.ts",
    "vitest.setup.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
