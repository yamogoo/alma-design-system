{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": false,
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",

    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "src/index.ts",
    "src/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.vue",
    "src/build/*.json"
  ]
}
