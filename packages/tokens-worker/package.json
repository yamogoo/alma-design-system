{
  "name": "@alma/tokens-worker",
  "author": {
    "name": "yamogoo",
    "email": "grebennikovmisha@gmail.com",
    "fullName": "Mikhail Grebennikov",
    "url": "https://github.com/yamogoo"
  },
  "private": false,
  "version": "0.3.0",
  "license": "MIT",
  "type": "module",
  "keywords": [],
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./plugins": {
      "types": "./dist/plugins/index.d.ts",
      "import": "./dist/plugins/index.js",
      "require": "./dist/plugins/index.cjs"
    },
    "./plugins/*": {
      "types": "./dist/plugins/*.d.ts",
      "import": "./dist/plugins/*.js",
      "require": "./dist/plugins/*.cjs"
    },
    "./parsers": {
      "types": "./dist/parsers/index.d.ts",
      "import": "./dist/parsers/index.js",
      "require": "./dist/parsers/index.cjs"
    },
    "./parsers/*": {
      "types": "./dist/parsers/*.d.ts",
      "import": "./dist/parsers/*.js",
      "require": "./dist/parsers/*.cjs"
    },
    "./tools": {
      "types": "./dist/tools/index.d.ts",
      "import": "./dist/tools/index.js",
      "require": "./dist/tools/index.cjs"
    },
    "./tools/*": {
      "types": "./dist/tools/*.d.ts",
      "import": "./dist/tools/*.js",
      "require": "./dist/tools/*.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint 'lib/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'lib/**/*.{ts,tsx}' --fix",
    "test": "vitest",
    "test:unit": "vitest run",
    "build": "tsc -p tsconfig.json && vite build"
  },
  "dependencies": {
    "color": "^5.0.2",
    "js-yaml": "^4.1.0",
    "lodash-es": "^4.17.21",
    "minimatch": "^9.0.5"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.18.8",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "chokidar": "^4.0.3",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "~5.8.3",
    "vite": "^6.3.6",
    "vitest": "^3.2.4"
  }
}
