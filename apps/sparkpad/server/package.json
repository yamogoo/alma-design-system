{
  "name": "sparkpad-server",
  "private": true,
  "version": "0.1.0",
  "author": {
    "name": "Misha Grebennikov",
    "email": "grebennikovmisha@gmail.com"
  },
  "main": "main.ts",
  "scripts": {
    "start": "tsc -w",
    "dev": "export NODE_ENV=development && nodemon --exec ts-node ./src/main.ts",
    "build": "tsc -b",
    "generate-jwt-key": "node -e \"console.log(require('crypto').randomBytes(32).toString('hex'))\"",
    "typecheck:node": "tsc --noEmit -p tsconfig.json --composite false",
    "drizzle:generate": "drizzle-kit generate:sqlite --schema=./src/db/schema.ts --out=./drizzle",
    "drizzle:migrate": "ts-node ./src/db/sqljs.migrate.ts"
  },
  "engines": {
    "node": ">=20 <=22"
  },
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.44.5",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "sql.js": "^1.13.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.10",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^16.18.126",
    "@types/sql.js": "^1.4.9",
    "@types/uuid": "^9.0.8",
    "@types/winston": "^2.4.4",
    "bcrypt": "^6.0.0",
    "drizzle-kit": "^0.31.5",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  },
  "_moduleAliases": {
    "@": "./src"
  }
}
