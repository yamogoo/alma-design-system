{
  "name": "@alma/monorepo",
  "author": {
    "name": "yamogoo",
    "email": "grebennikovmisha@gmail.com",
    "fullName": "Mikhail Grebennikov",
    "url": "https://github.com/yamogoo"
  },
  "private": false,
  "version": "0.4.0",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "design system",
    "tokens",
    "frontend",
    "custom ui"
  ],
  "scripts": {
    "install:all": "pnpm install",
    "tokens-worker:test": "pnpm --filter tokens-worker test:unit",
    "tokens-worker:build": "pnpm --filter tokens-worker build",
    "prepare": "pnpm tokens-worker:test && pnpm tokens-worker:build",
    "sparkpad:client:dev": "pnpm --filter sparkpad-client dev",
    "sparkpad:client:build": "pnpm --filter sparkpad-client build",
    "sparkpad:client:test:unit": "pnpm --filter sparkpad-client test:unit",
    "sparkpad:server:dev": "pnpm --filter sparkpad-server dev",
    "sparkpad:server:build": "pnpm --filter sparkpad-server build",
    "ds:lint": "pnpm --filter design-system lint",
    "ds:test:unit": "pnpm --filter design-system test:unit",
    "ds:build": "pnpm --filter design-system build",
    "ds:tokens:cache": "pnpm --filter design-system run tokens:cache",
    "ds:tokens:clean": "pnpm --filter design-system run tokens:cache:clean",
    "ds:tokens:verify": "pnpm --filter design-system run tokens:cache:verify",
    "ds:docs:dev": "pnpm --filter design-system prepare && pnpm --filter design-system docs:dev",
    "ds:docs:build": "pnpm --filter design-system docs:build",
    "ds:docs:preview": "pnpm --filter design-system docs:preview"
  },
  "packageManager": "pnpm@9.12.3",
  "dependencies": {
    "@alma/design-system": "workspace:*"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.5.0",
    "globals": "^16.4.0",
    "typescript-eslint": "^8.44.1",
    "vue-eslint-parser": "^10.2.0"
  }
}
